@model IEnumerable<GestionDeVehiculos.ViewModels.MoviesView>
@using System.Linq
@using GestionDeVehiculos.Data
@using GestionDeVehiculos.ViewModels

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Crear pelicula</a>
</p>

<h1 style="font-size: 40px;"><strong>Pr√≥ximamente</strong></h1>
<hr />
<div class="container" style="margin-top: 60px;">
    @foreach (var item in Model)
    {
        <div class="card" style="width: 18rem; margin-bottom: 50px !important;">
            <img src="~/img/Movie/@item.FotoPath" class="card-img-top" alt="...">
        </div>
        <div style="position: relative; top: -40px; left: 30px;">
            <a href="Movies/Details/@item.Id">
                <img src="~/img/brand/jugar.png" style="height: 40px; width: 40px; margin-left: 20px;" />
            </a>
            <a href="Movies/Edit/@item.Id">
                <img src="~/img/brand/editar.png" style="height: 40px; width: 40px; margin-left: 20px;" />
            </a>
            <a href="Movies/Delete/@item.Id">
                <img src="~/img/brand/borrar.png" style="height: 40px; width: 40px; margin-left: 20px;" />
            </a>
        </div>

        <div style="position: relative; left: 400px; top: -220px;">
            <h1><strong>@item.Nombre</strong></h1>
            <h3 style="max-width: 550px;">@item.Sipnosis</h3>
        </div>
        <hr />
    }
</div>
